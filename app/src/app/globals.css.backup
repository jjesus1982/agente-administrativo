@tailwind base;
@tailwind components;
@tailwind utilities;

/* üé® DESIGN SYSTEM 2025 - AGENTE ADMINISTRATIVO */
@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

:root {
  /* üé® PALETA DE CORES 2025 - LIGHT MODE */
  --background: 0 0% 100%;
  --foreground: 222.2 84% 4.9%;
  --card: 0 0% 100%;
  --card-foreground: 222.2 84% 4.9%;
  --primary: 221.2 83.2% 53.3%; /* Azul moderno */
  --primary-foreground: 210 40% 98%;
  --secondary: 210 40% 96.1%;
  --secondary-foreground: 222.2 84% 4.9%;
  --muted: 210 40% 96.1%;
  --muted-foreground: 215.4 16.3% 46.9%;
  --accent: 210 40% 96.1%;
  --accent-foreground: 222.2 84% 4.9%;
  --destructive: 0 84.2% 60.2%;
  --destructive-foreground: 210 40% 98%;
  --success: 142 76% 36%;
  --success-foreground: 355.7 100% 97.3%;
  --warning: 38 92% 50%;
  --warning-foreground: 48 96% 89%;
  --border: 214.3 31.8% 91.4%;
  --input: 214.3 31.8% 91.4%;
  --ring: 221.2 83.2% 53.3%;
  --popover: 0 0% 100%;
  --popover-foreground: 222.2 84% 4.9%;

  /* üåü GLASSMORPHISM COLORS */
  --glass-bg: rgba(255, 255, 255, 0.1);
  --glass-bg-dark: rgba(30, 41, 59, 0.4);
  --glass-border: rgba(255, 255, 255, 0.2);
  --glass-border-dark: rgba(148, 163, 184, 0.2);

  /* üìä CHARTS COLORS */
  --chart-1: 12 76% 61%;
  --chart-2: 173 58% 39%;
  --chart-3: 197 37% 24%;
  --chart-4: 43 74% 66%;
  --chart-5: 27 87% 67%;

  /* üîß SIDEBAR COLORS */
  --sidebar: var(--background);
  --sidebar-foreground: var(--foreground);
  --sidebar-primary: var(--primary);
  --sidebar-primary-foreground: var(--primary-foreground);
  --sidebar-accent: var(--accent);
  --sidebar-accent-foreground: var(--accent-foreground);
  --sidebar-border: var(--border);
  --sidebar-ring: var(--ring);

  /* üìè SPACING SYSTEM (8px grid) */
  --space-1: 0.25rem;  /* 4px */
  --space-2: 0.5rem;   /* 8px */
  --space-3: 0.75rem;  /* 12px */
  --space-4: 1rem;     /* 16px */
  --space-6: 1.5rem;   /* 24px */
  --space-8: 2rem;     /* 32px */
  --space-12: 3rem;    /* 48px */
  --space-16: 4rem;    /* 64px */

  /* üè¢ ENTERPRISE SHADOWS - Simplificadas */
  --shadow-card: 0 1px 3px 0 rgb(0 0 0 / 0.1);       /* Cards padr√£o */
  --shadow-card-hover: 0 4px 6px -1px rgb(0 0 0 / 0.1); /* Cards hover */
  --shadow-modal: 0 10px 15px -3px rgb(0 0 0 / 0.1);  /* Modais */
  --shadow-dropdown: 0 4px 6px -1px rgb(0 0 0 / 0.1); /* Dropdowns */

  /* üìê BORDER RADIUS */
  --radius: 0.625rem;
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);

  /* üè¢ DESIGN SYSTEM ENTERPRISE - SaaS Professional */
  --bg-app: #F9FAFB;              /* Fundo principal (gray-50) */
  --bg-card: #FFFFFF;             /* Cards brancos puros */
  --bg-secondary: #F3F4F6;        /* Fundo secund√°rio (gray-100) */
  --bg-tertiary: #E5E7EB;         /* Fundo terci√°rio (gray-200) */

  /* Tipografia hier√°rquica enterprise */
  --text-primary: #111827;        /* Texto principal (gray-900) */
  --text-secondary: #4B5563;      /* Texto secund√°rio (gray-600) */
  --text-muted: #6B7280;          /* Texto auxiliar (gray-500) */
  --text-caption: #9CA3AF;        /* Legendas (gray-400) */

  /* Bordas e separadores limpos */
  --border-light: #E5E7EB;        /* Bordas sutis (gray-200) */
  --border-default: #D1D5DB;      /* Bordas padr√£o (gray-300) */
  --border-strong: #9CA3AF;       /* Bordas enf√°ticas (gray-400) */

  /* Acentos funcionais */
  --accent-primary: #2563EB;      /* Azul principal (blue-600) */
  --accent-light: #EFF6FF;        /* Fundo azul claro (blue-50) */
  --accent-border: #BFDBFE;       /* Borda azul (blue-200) */
  --accent-text: #1D4ED8;         /* Texto azul (blue-700) */

  /* Estados de sistema */
  --success: #059669;             /* Verde (emerald-600) */
  --success-light: #ECFDF5;       /* Verde claro (emerald-50) */
  --warning: #D97706;             /* Laranja (amber-600) */
  --warning-light: #FFFBEB;       /* Laranja claro (amber-50) */
  --error: #DC2626;               /* Vermelho (red-600) */
  --error-light: #FEF2F2;         /* Vermelho claro (red-50) */

  /* üîÑ COMPATIBILIDADE - Mapeamento para vari√°veis antigas */
  --bg-primary: var(--bg-card);
  --accent: var(--accent-primary);
  --accent-bg: var(--accent-light);

  /* üé® TYPOGRAPHY FLUID SCALES */
  --text-xs: clamp(0.75rem, 0.7rem + 0.15vw, 0.8rem);
  --text-sm: clamp(0.875rem, 0.8rem + 0.2vw, 0.95rem);
  --text-base: clamp(1rem, 0.95rem + 0.25vw, 1.125rem);
  --text-lg: clamp(1.125rem, 1rem + 0.5vw, 1.5rem);
  --text-xl: clamp(1.25rem, 1.1rem + 0.75vw, 2rem);
  --text-2xl: clamp(1.5rem, 1.3rem + 1vw, 2.5rem);
}

* { box-sizing: border-box; padding: 0; margin: 0; }

html, body {
  max-width: 100vw;
  overflow-x: hidden;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--bg-app);
  color: var(--text-primary);
  -webkit-font-smoothing: antialiased;
}

::-webkit-scrollbar { width: 8px; height: 8px; }
::-webkit-scrollbar-track { background: var(--bg-app); }
::-webkit-scrollbar-thumb { background: var(--bg-tertiary); border-radius: 4px; }
::-webkit-scrollbar-thumb:hover { background: var(--border-strong); }

@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
@keyframes slideIn { from { opacity: 0; transform: translateX(20px); } to { opacity: 1; transform: translateX(0); } }
@keyframes spin { to { transform: rotate(360deg); } }

.animate-fade-in { animation: fadeIn 0.3s ease-out forwards; }
.enterprise-panel { background: var(--bg-card); border: 1px solid var(--border-light); border-radius: var(--radius-xl); }

input:focus, select:focus, textarea:focus { outline: none; border-color: var(--accent-primary); box-shadow: 0 0 0 3px var(--accent-light); }
a { color: var(--accent-primary); text-decoration: none; }
a:hover { text-decoration: underline; }

@theme inline {
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --radius-2xl: calc(var(--radius) + 8px);
  --radius-3xl: calc(var(--radius) + 12px);
  --radius-4xl: calc(var(--radius) + 16px);
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

/* üåô DARK MODE 2025 */
.dark {
  --background: 222.2 84% 4.9%;
  --foreground: 210 40% 98%;
  --card: 222.2 84% 4.9%;
  --card-foreground: 210 40% 98%;
  --primary: 217.2 91.2% 59.8%;
  --primary-foreground: 222.2 84% 4.9%;
  --secondary: 217.2 32.6% 17.5%;
  --secondary-foreground: 210 40% 98%;
  --muted: 217.2 32.6% 17.5%;
  --muted-foreground: 215 20.2% 65.1%;
  --accent: 217.2 32.6% 17.5%;
  --accent-foreground: 210 40% 98%;
  --destructive: 0 62.8% 30.6%;
  --destructive-foreground: 210 40% 98%;
  --border: 217.2 32.6% 17.5%;
  --input: 217.2 32.6% 17.5%;
  --ring: 224.3 76.3% 94.1%;
  --popover: 222.2 84% 4.9%;
  --popover-foreground: 210 40% 98%;

  /* üè¢ ENTERPRISE SHADOWS DARK */
  --shadow-card: 0 1px 3px 0 rgb(0 0 0 / 0.2);       /* Cards padr√£o dark */
  --shadow-card-hover: 0 4px 6px -1px rgb(0 0 0 / 0.25); /* Cards hover dark */
  --shadow-modal: 0 10px 15px -3px rgb(0 0 0 / 0.3);  /* Modais dark */
  --shadow-dropdown: 0 4px 6px -1px rgb(0 0 0 / 0.25); /* Dropdowns dark */

  /* Dark charts */
  --chart-1: 220 70% 50%;
  --chart-2: 160 60% 45%;
  --chart-3: 30 80% 55%;
  --chart-4: 280 65% 60%;
  --chart-5: 340 75% 55%;

  /* üåô DESIGN SYSTEM ENTERPRISE - Dark Mode Professional */
  --bg-app: #0F172A;              /* Fundo principal escuro (slate-900) */
  --bg-card: #1E293B;             /* Cards escuros (slate-800) */
  --bg-secondary: #334155;        /* Fundo secund√°rio (slate-700) */
  --bg-tertiary: #475569;         /* Fundo terci√°rio (slate-600) */

  /* Tipografia hier√°rquica dark */
  --text-primary: #F8FAFC;        /* Texto principal (slate-50) */
  --text-secondary: #CBD5E1;      /* Texto secund√°rio (slate-300) */
  --text-muted: #94A3B8;          /* Texto auxiliar (slate-400) */
  --text-caption: #64748B;        /* Legendas (slate-500) */

  /* Bordas dark */
  --border-light: #334155;        /* Bordas sutis (slate-700) */
  --border-default: #475569;      /* Bordas padr√£o (slate-600) */
  --border-strong: #64748B;       /* Bordas enf√°ticas (slate-500) */

  /* Acentos dark */
  --accent-primary: #3B82F6;      /* Azul principal (blue-500) */
  --accent-light: #1E3A8A;        /* Fundo azul escuro (blue-800) */
  --accent-border: #2563EB;       /* Borda azul (blue-600) */
  --accent-text: #60A5FA;         /* Texto azul (blue-400) */

  /* Estados dark */
  --success: #10B981;             /* Verde (emerald-500) */
  --success-light: #064E3B;       /* Verde escuro (emerald-900) */
  --warning: #F59E0B;             /* Laranja (amber-500) */
  --warning-light: #78350F;       /* Laranja escuro (amber-900) */
  --error: #EF4444;               /* Vermelho (red-500) */
  --error-light: #7F1D1D;         /* Vermelho escuro (red-900) */

  /* üîÑ COMPATIBILIDADE DARK - Mapeamento para vari√°veis antigas */
  --bg-primary: var(--bg-card);
  --accent: var(--accent-primary);
  --accent-bg: var(--accent-light);
}

@layer base {
  * {
    @apply border-border;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  body {
    @apply bg-background text-foreground;
    font-feature-settings: 'cv11', 'ss01';
    font-variation-settings: 'opsz' auto;
    overflow-x: hidden;
  }
}

/* üè¢ ENTERPRISE CARD UTILITIES */
@layer components {
  .enterprise-card {
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    box-shadow: var(--shadow-card);
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }

  .enterprise-card:hover {
    border-color: var(--border-default);
    box-shadow: var(--shadow-card-hover);
  }

  .enterprise-input {
    background: var(--bg-card);
    border: 1px solid var(--border-default);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .enterprise-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px var(--accent-light);
  }

  .enterprise-button {
    background: var(--accent-primary);
    color: white;
    border: 1px solid var(--accent-primary);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .enterprise-button:hover {
    background: var(--accent-text);
    border-color: var(--accent-text);
    transform: translateY(-1px);
    box-shadow: var(--shadow-card);
  }
}

/* üè¢ ENTERPRISE VARIANTS */
@layer components {
  .enterprise-card-elevated {
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    box-shadow: var(--shadow-card-hover);
    border-radius: 0.75rem;
  }

  .enterprise-card-flat {
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 0.75rem;
  }

  .enterprise-button-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-default);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .enterprise-button-secondary:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-strong);
  }

  .enterprise-button-ghost {
    background: transparent;
    color: var(--text-secondary);
    border: 1px solid transparent;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .enterprise-button-ghost:hover {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border-color: var(--border-light);
  }

  /* üìù TIPOGRAFIA ENTERPRISE */
  .text-display {
    color: var(--text-primary);
    font-weight: 700;
    line-height: 1.2;
  }

  .text-heading {
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.3;
  }

  .text-subheading {
    color: var(--text-secondary);
    font-weight: 600;
    line-height: 1.4;
  }

  .text-body {
    color: var(--text-secondary);
    font-weight: 400;
    line-height: 1.5;
  }

  .text-caption {
    color: var(--text-muted);
    font-weight: 500;
    line-height: 1.4;
  }

  .text-label {
    color: var(--text-caption);
    font-weight: 500;
    line-height: 1.3;
    font-size: 0.875rem;
  }

  .text-accent {
    color: var(--accent-primary);
    font-weight: 600;
  }

  .text-success {
    color: var(--success);
    font-weight: 500;
  }

  .text-warning {
    color: var(--warning);
    font-weight: 500;
  }

  .text-error {
    color: var(--error);
    font-weight: 500;
  }
}

/* ‚ö° ANIMA√á√ïES MODERNAS */
@layer components {
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slide-in {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes slide-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes scale-in {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes glass-shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 5px hsl(var(--primary) / 0.5); }
    50% { box-shadow: 0 0 20px hsl(var(--primary) / 0.8); }
  }

  .animate-fade-in { animation: fade-in 0.3s ease-out forwards; }
  .animate-slide-in { animation: slide-in 0.3s ease-out forwards; }
  .animate-slide-up { animation: slide-up 0.3s ease-out forwards; }
  .animate-scale-in { animation: scale-in 0.2s ease-out forwards; }
  .animate-shimmer { animation: glass-shimmer 2s linear infinite; }
  .animate-pulse-glow { animation: pulse-glow 2s ease-in-out infinite; }
}

/* üéØ HOVER EFFECTS */
@layer components {
  .hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-lift:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .hover-glow:hover {
    box-shadow: 0 0 20px hsl(var(--primary) / 0.3);
  }

  .hover-scale:hover {
    transform: scale(1.02);
  }
}

/* üîß UTILITY CLASSES */
@layer utilities {
  .gradient-primary {
    background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--primary) / 0.8));
  }

  .gradient-success {
    background: linear-gradient(135deg, hsl(var(--success)), hsl(var(--success) / 0.8));
  }

  .gradient-warning {
    background: linear-gradient(135deg, hsl(var(--warning)), hsl(var(--warning) / 0.8));
  }

  .text-fluid-xs { font-size: var(--text-xs); }
  .text-fluid-sm { font-size: var(--text-sm); }
  .text-fluid-base { font-size: var(--text-base); }
  .text-fluid-lg { font-size: var(--text-lg); }
  .text-fluid-xl { font-size: var(--text-xl); }
  .text-fluid-2xl { font-size: var(--text-2xl); }

  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    background: hsl(var(--border));
    border-radius: 3px;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background: hsl(var(--border) / 0.8);
  }
}

/* üì± MOBILE OPTIMIZATIONS */
@media (max-width: 768px) {
  .touch-optimization {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  button, [role="button"] {
    min-height: 44px;
    min-width: 44px;
  }
}
