[flake8]
# Configuração do Flake8 para CI/CD

max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    migrations,
    alembic,
    node_modules

# Erros e warnings a ignorar
ignore =
    E203,
    E266,
    E501,
    W503,
    W504

# Configurações adicionais
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

count = True
show-source = True
statistics = True
