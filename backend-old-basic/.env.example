# Conecta Plus API - Environment Variables
# Copie este arquivo para .env e configure as vari√°veis

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME="Conecta Plus API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3002"]

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/conecta_plus
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
CACHE_TTL_SECONDS=300

# =============================================================================
# JWT / SECURITY
# IMPORTANTE: Gere uma chave segura para producao!
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
# =============================================================================
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_SECURE_KEY_64_CHARS_MINIMUM
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=300

# =============================================================================
# SECURITY
# =============================================================================
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600
SECURE_COOKIES=false
TRUSTED_HOSTS=["localhost","127.0.0.1"]

# =============================================================================
# MINIO / S3
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=conecta-plus
MINIO_SECURE=false
MINIO_PUBLIC_URL=http://localhost:9000

# =============================================================================
# FIREBASE (opcional)
# =============================================================================
FIREBASE_ENABLED=false
FIREBASE_CREDENTIALS_PATH=

# =============================================================================
# EMAIL / SMTP
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@conectaplus.com.br
SMTP_USE_TLS=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# GUNICORN (Production)
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:8100
GUNICORN_LOG_LEVEL=warning

# =============================================================================
# PROMETHEUS METRICS
# =============================================================================
ENABLE_METRICS=true
